<div class="container">
    <div class="row">
        <div class="col s12">
            <h1 class="head_title">Courses</h1>
        </div>
    </div>

    <div class="row">
        {{#if courses.length}}
            <div class="row">
                {{#each courses}}
                    <div class="col s12 m6">
                        <div class="card large">
                            <div class="card-image">
                                <img src="{{img}}" alt="{{img}}">
                            </div>
                            <div class="card-content">
                                <span class="card-title">{{title}}</span>
                                <p class="price">{{price}}</p>
                            </div>
                            <div class="card-action">
                                <a href="/courses/{{id}}" target="_blank">Open course</a>
                                {{#if @root.isAuth}}

                                {{#ifeq userId._id @root.userId}}
                                    <a href="/courses/{{id}}/edit?allow=true">Edit course</a>
                                {{/ifeq}}

                                <form action="/card/add" method="POST">
                                    <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                                    <input type="hidden" name="id" value="{{id}}">
                                    <button class="btn btn deep-purple">Add to Card</button>
                                </form>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <h3>Courses list empty</h3>
        {{/if}}
    </div>
</div>