<div class="container">
    <div class="row">
        <div class="col s 12 offset-s2">
            <h1>Edit course {{course.title}}</h1>

            <form action="/courses/edit" method="POST" class="course-form">
                <div class="input-field">
                    <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
                    <label for="title">Course name</label>
                    <span class="helper-text" data-error="Enter title"></span>
                </div>

                <div class="input-field">
                    <input id="price" name="price" type="number" class="validate" min="10" required value="{{course.price}}">
                    <label for="price">Course price</label>
                    <span class="helper-text" data-error="Enter price"></span>
                </div>

                <div class="input-field">
                    <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
                    <label for="url">URL image</label>
                    <span class="helper-text" data-error="Enter URL"></span>
                </div>

                <input type="hidden" name="id" value="{{course.id}}">
                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn btn-primary">Edit Course</button>
            </form>

            <form action="/courses/remove" method="POST">
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <input type="hidden" name="id" value="{{course.id}}">
                <button type="submit" class="btn red">Delete course</button>
            </form>
        </div>
    </div>
</div>